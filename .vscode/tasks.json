{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Julia Project (SFML)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", // Include debug symbols

                // --- List ALL your .cpp source files ---
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/JuliaSetCalculator.cpp",
                "${workspaceFolder}/src/SFMLWindowDrawer.cpp",

                // --- Output Executable ---
                "-o",
                "${workspaceFolder}/JuliaSet.exe",

                // --- Include Paths (Where to find .hpp files) ---
                "-I C:/msys64/ucrt64/include",    // For SFML
                "-I ${workspaceFolder}/headers", // For your project headers

                // --- Library Paths (Where to find .lib/.a files) ---
                "-L C:/msys64/ucrt64/lib",

                // --- Libraries to Link ---
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
